{
	"name": "server",
	"version": "1.0.0",
	"description": "email survey sender",
	"main": "app.js",
	"engines": {
		"node": "8.12.0",
		"npm": "5.0.3"
	},
	"scripts": {
		"start": "NODE_ENV=production node app.js",
		"devServer": "set NODE_ENV=development&& nodemon app.js",
		"prod": "set NODE_ENV=production&& nodemon app.js",
		"client": "npm run start --prefix client",
		"dev": "concurrently \"npm run devServer\" \"npm run client\" \"npm run webhook\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix client && npm run build --prefix client",
		"webhook": "forever start sendgrid_webhook.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Dibyajyoti Ghosal",
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.18.3",
		"colors": "^1.3.3",
		"concurrently": "^4.1.0",
		"config": "^3.0.1",
		"cookie-session": "^1.3.3",
		"dotenv": "^6.2.0",
		"express": "^4.15.3",
		"express-async-errors": "^3.1.1",
		"http-proxy-middleware": "^0.19.1",
		"localtunnel": "^1.9.1",
		"lodash": "^4.17.11",
		"mongoose": "^5.4.17",
		"passport": "^0.3.2",
		"passport-google-oauth20": "^1.0.0",
		"path-parser": "^4.2.0",
		"sendgrid": "^5.2.3",
		"stripe": "^6.27.0",
		"winston": "^2.1.1"
	},
	"devDependencies": {
		"eslint": "^5.15.1",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-react": "^7.12.4",
		"forever": "^1.0.0"
	}
}
